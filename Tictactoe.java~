import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class Tictactoe {
	private static JFrame frame;
	private static int turn = 1;
	private static int game = 0;
	private static boolean proceed;
	private static JPanel cards;
	
	public static void main(String[] args){
			
		//frame = new JFrame ("");
	
		final BasicWindow window = new BasicWindow();
		
		
		cards = new JPanel(new CardLayout());
		
		JPanel card1 = window.startWindow();
        JPanel card2 = window.playWindow();
	
        cards.add(card1, "startGame");
        cards.add(card2, "playGame");
             
       	window.returnContainer.add(cards);
        CardLayout cardLayout = (CardLayout) cards.getLayout();
		cardLayout.show(cards, "startGame"); 
	
		window.addOkButtonActionListener(new ActionListener() {
        	public void actionPerformed(ActionEvent e) {     
			System.out.println(window.getPlayerName1());
			
			
			
			//player1 = new Player(playerName1);
			//player2 = new Player(playerName2);

			
       		}
        });
		
		//System.out.println(window.getPlayer1().getName());
	}
	
	public static int getTurn() {
		return turn;
	}
	
	public static int getGame() {
		return game;
	}
	
	public static void updateTurn() {
		turn += 1;
	}
	
	public static void updateGame() {
		game += 1;
	}
}
